<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    android:orientation="vertical"
    android:id="@+id/camera_preview">

    <TextView
        android:id="@+id/rectangle_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/rectangle_white" />

    <TextView
        android:id="@+id/your_item_is"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your item is"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignTop="@id/rectangle_white"
        android:layout_alignStart="@id/rectangle_white"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_alignLeft="@id/rectangle_white"
        android:layout_marginLeft="30dp" />

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@id/your_item_is"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/rectangle_white"
        android:layout_alignLeft="@+id/rectangle_white"
        android:layout_alignEnd="@+id/rectangle_white"
        android:layout_alignRight="@+id/rectangle_white"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="CANDY WRAPPER"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_below="@id/item_image"
        android:gravity="center"/>

    <TextView
        android:id="@+id/item_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/rectangle_white"
        android:layout_alignLeft="@+id/rectangle_white"
        android:layout_alignEnd="@+id/rectangle_white"
        android:layout_alignRight="@+id/rectangle_white"
        android:text="0 %"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_below="@id/item_name"
        android:gravity="center"/>

    <Button
        android:id="@+id/yes_button"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/rectangle_white"
        android:layout_alignLeft="@id/rectangle_white"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rectangle_dark_very_round"
        android:text="YES"
        android:textColor="@color/colorWhite"
        android:textSize="30sp" />

    <Button
        android:id="@+id/no_button"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/yes_button"
        android:layout_alignBottom="@+id/rectangle_white"
        android:layout_alignRight="@id/rectangle_white"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rectangle_light_very_round"
        android:text="NO"
        android:textColor="@color/colorWhite"
        android:textSize="30sp" />

</RelativeLayout>
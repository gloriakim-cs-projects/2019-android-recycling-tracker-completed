<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@null"
    android:padding="5dp">

    <ImageView
        android:id="@+id/other_items"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/oic_1"
        android:padding="10dp"
        android:alpha=".2"
        android:elevation="5dp"/>

    <ImageView
        android:id="@+id/other_items_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignStart="@+id/other_items"
        android:layout_alignLeft="@+id/other_items"
        android:layout_alignTop="@+id/other_items"
        android:layout_alignEnd="@+id/other_items"
        android:layout_alignRight="@+id/other_items"
        android:layout_alignBottom="@+id/other_items"
        android:background="@drawable/rectangle_white_round"/>


    <TextView
        android:id="@+id/other_items_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/other_items"
        android:layout_alignLeft="@+id/other_items"
        android:layout_alignTop="@+id/other_items"
        android:layout_alignEnd="@+id/other_items"
        android:layout_alignRight="@+id/other_items"
        android:layout_alignBottom="@+id/other_items"
        android:gravity="center"
        android:text="999"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="50dp"
        android:textStyle="bold"
        android:elevation="10dp"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".progress_bar_activity"
    android:background="@color/colorPrimary"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rectangle_white_round" />

    <ImageView
        android:id="@+id/recycle_icon1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_recycle_green"
        android:layout_alignTop="@id/background"
        android:layout_marginTop="20dp"
        android:alpha=".20"/>

    <ImageView
        android:id="@+id/recycle_icon2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/recycle_icon1"
        android:layout_centerHorizontal="true"
        android:alpha=".20"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_recycle_green" />

    <ImageView
        android:id="@+id/recycle_icon3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/recycle_icon2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_recycle_green"
        android:alpha=".20"/>

    <TextView
        android:id="@+id/credits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/background"
        android:paddingTop="30dp"
        android:text="CREDITS"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="50dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/description1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/credits"
        android:layout_alignLeft="@id/background"
        android:paddingTop="10dp"
        android:paddingLeft="30dp"
        android:text="APP DEVELOPMENT"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/description2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description1"
        android:layout_alignLeft="@id/background"
        android:paddingLeft="30dp"
        android:text="Gloria Kim"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/description3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description2"
        android:layout_alignLeft="@id/background"
        android:paddingTop="10dp"
        android:paddingLeft="30dp"
        android:text="MENTORS"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/description4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description3"
        android:layout_alignLeft="@id/background"
        android:paddingLeft="30dp"
        android:text="Dr. Mark Thompson\nEmily Bilcik\nCassie Hudson\nErik Trevino\nPranathy Enamela\nRyan Peck"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/description5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description4"
        android:layout_alignLeft="@id/background"
        android:paddingTop="10dp"
        android:paddingLeft="30dp"
        android:text="PHOTOS"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/description6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description5"
        android:layout_alignLeft="@id/background"
        android:layout_alignRight="@id/background"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="Kayleigh Kowaleski"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/description7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description6"
        android:layout_alignLeft="@id/background"
        android:paddingTop="10dp"
        android:paddingLeft="30dp"
        android:text="ICONS"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/description8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description7"
        android:layout_alignLeft="@id/background"
        android:layout_alignRight="@id/background"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="flaticon.com"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/background"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:background="@drawable/rectangle_dark_round"
        android:padding="15dp"
        android:text="CLOSE"
        android:textColor="@color/colorWhite"
        android:textSize="25dp"
        android:textStyle="bold" />

</RelativeLayout>